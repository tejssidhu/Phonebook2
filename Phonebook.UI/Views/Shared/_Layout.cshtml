@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
   <title>Phonebook App - Durandal</title>

   <meta charset="utf-8" />
   <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
   <meta name="apple-mobile-web-app-capable" content="yes" />
   <meta name="apple-mobile-web-app-status-bar-style" content="black" />
   <meta name="format-detection" content="telephone=no" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
   <meta name="apple-mobile-web-app-title" content="Phonebook App - Durandal">
   
   <link rel="apple-touch-icon" href="~/Content/images/AppIcon60x60.png" />
   <link rel="apple-touch-icon" sizes="76x76" href="~/Content/images/AppIcon76x76.png" />
   <link rel="apple-touch-icon" sizes="120x120" href="~/Content/images/AppIcon120x120.png" />
   <link rel="apple-touch-icon" sizes="152x152" href="~/Content/images/AppIcon152x152.png" />
   
   <link rel="shortcut icon" href="~/Content/images/AppIcon32x32.png" >

   @Styles.Render("~/Content/css")

   <script type="text/javascript">
	if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
		var msViewportStyle = document.createElement("style");
		var mq = "@@-ms-viewport{width:auto!important}";
		msViewportStyle.appendChild(document.createTextNode(mq));
		document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
	}
   </script>
</head>
<body>
   <div id="applicationHost"></div>

	@RenderSection("ViewScripts", required: false)
   
</body>
</html>
